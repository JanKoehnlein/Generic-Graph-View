style ClassNode.Name as LabelShape {
	font = font("Helvetica", 13, 1 + (if (element.abstract) 2 else 0))
	border = new MarginBorder(5,5,5,5)
	text = element.name
}

style ClassNode.Attributes , ClassNode.Operations  as RectangleShape {
	outline = false
	backgroundColor = color(#ffffff)
}

style ClassNode.ReferenceEdge.EdgeLabel as LabelShape {
	connectionAlignment = ConnectionLocator::TARGET
}

