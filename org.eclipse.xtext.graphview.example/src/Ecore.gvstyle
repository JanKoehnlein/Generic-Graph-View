import org.eclipse.xtext.graphview.shape.*
import org.eclipse.xtext.graphview.layout.*  
import org.eclipse.draw2d.*
import PackageDiagram.*

stylesheet PackageDiagram for PackageDiagram

style PackageDiagram as DiagramShape {
	val autoLayout = new SpringAutoLayout()
	autoLayout.iterations = 500
	autoLayout.blankToNodeAreaRatio = 4
	autoLayoutManager = autoLayout  
}

